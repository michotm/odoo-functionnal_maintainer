<?xml version="1.0" ?>
<openerp>
	<data>      
       		  
        <record model="ir.ui.view" id="identity_form">
            <field name="name">identity_form</field>
            <field name="model">identity</field>   
            <field name="type">form</field>
            <field name="arch" type="xml">
            	<form>
            		<group col="4">
			            <field name="name" />
						<newline/>			            
			            <field name="user" />
			            <field name="password" password="True"/>    			            			
            		</group>
            	</form>
            </field> 
        </record>
                
		<record model="ir.actions.act_window" id="action_identity">
			<field name="name">identity</field>
			<field name="res_model">identity</field>
			<field name="view_type">form</field>
		</record>
		
		<record model="ir.actions.act_window" id="action_connexion">
			<field name="name">Connexion</field>
			<field name="res_model">connexion</field>
			<field name="view_type">form</field>
		</record>
		     
	</data>
</openerp>
